<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/pin_input_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Signal.Text.Body"
        android:text="@string/pin_input_description"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/pin_input_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Signal.Text.Body"
        android:text=""
        android:fontFamily="sans-serif-medium"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/pin_input_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <EditText
        android:id="@+id/pin_input_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="105sp"
        android:paddingTop="36dp"
        android:gravity="center"
        android:hint="@string/pin_input_pin"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pin_input_status" />



    <Button
        android:id="@+id/pin_input_cancel"
        style="@style/Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/cancel"
        app:layout_constraintTop_toBottomOf="@id/pin_input_pin"
        app:layout_constraintEnd_toStartOf="@id/pin_input_check"/>

    <Button
        android:id="@+id/pin_input_check"
        style="@style/Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pin_input_check"
        app:layout_constraintTop_toBottomOf="@id/pin_input_pin"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>